<%= content_for :brand do %>
  <% if @user.photo.present? %>
    <%= image_tag @user.photo %>
  <% else %>
    <i class="fas fa-paw has-text-white-ter"></i>
  <% end %>
<% end %>

<%= content_for :title do %>
  <div class="contact-header" data-user="<%= @user.id %>">
    <div class="name">
      <%= @user.name %>
    </div>
    <div class="status">
      <%= @user.is_online? ? "Online" : "Offline" %>
    </div>
  </div>
<% end %>

<div class="message-container">
  <%= render @messages %>

  <footer class="send-message has-background-black">
    <div class="container">
      <%= form_with url: chat_messages_path(@user), id: 'message_send_form' do |f| %>
        <div class="columns is-mobile is-vcentered">
          <div class="column is-four-fifths">
            <div class="fields">
              <%= f.text_area "message[content]", class: "textarea has-text-black-ter", rows: 1, style: "resize: none", id: 'text_area_message' %>
            </div>
          </div>
          <div class="column is-one-fifth has-text-centered">
            <%= button_tag id: 'btn_id', class: "button is-info is-rounded has-text-white-ter" do %>
              <i class="fas fa-paper-plane"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </footer>
</div>
